# CLI:	Run `make` inside the root directory to automatically
#		install dependencies, lint, compile and run the application.
#
# npm run lint-browser
#		Runs ESLint on all code inside the src directory.
#
# npm install
#		Installs all neccessary dependencies
#
# npm run build
#		Compiles and transpiles the source code.
#
# node src/Server/server.js
#		Actually runs the entire web application

default:
	npm run lint-browser
	npm install
	npm run build
	node src/Server/server.js