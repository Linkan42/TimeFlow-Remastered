{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    },
    "overrides": [
        {
            "files": ["src/View/TimeStack/MeetingCoworkerList/MeetingCoworkerList.js",
                      "src/App.test.js",
                      "src/Views.jsx"],
            "rules": {
                "react/jsx-key": "off",
                "no-undef": "off",
                "quotes": "off",
                "indent": "off"
            }
        }
    ]
}
