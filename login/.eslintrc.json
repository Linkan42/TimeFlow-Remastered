{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:all",       // call me a madman
        "plugin:react/all"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
